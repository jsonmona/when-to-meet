generator client {
  provider = "prisma-client"
  output   = "../src/prisma-generated"
}

datasource db {
  provider = "mysql"
}

model Appointment {
  id        Int      @id @default(autoincrement())
  nonce     Int      @db.UnsignedTinyInt
  name      String   @db.VarChar(80)
  startDate DateTime @db.Date
  endDate   DateTime @db.Date
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tags         TagsOnAppointments[]
  participants Participant[]
}

model TagsOnAppointments {
  appointmentId Int
  tagId         Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  appointment Appointment @relation(fields: [appointmentId], references: [id])
  tag         Tag         @relation(fields: [tagId], references: [id])

  @@id([appointmentId, tagId])
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(30)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  appointmentTags  TagsOnAppointments[]
  participantMarks ParticipantMark[]
}

model Participant {
  id            Int      @id @default(autoincrement())
  name          String   @db.VarChar(30)
  appointmentId Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  appointment      Appointment       @relation(fields: [appointmentId], references: [id])
  participantMarks ParticipantMark[]
}

model ParticipantMark {
  participantId Int
  tagId         Int
  calendarDate  DateTime @db.Date
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  participant Participant @relation(fields: [participantId], references: [id])
  tag         Tag         @relation(fields: [tagId], references: [id])

  @@id([participantId, tagId, calendarDate])
}
